{% extends 'base.html.twig' %}

{% block body_id 'edit_message' %}


{% block main %}

    <div class="card my-4">
        <h5 class="card-header">Edit a message</h5>
        <div class="card-body">
            <form method="post" action="{{ path('edit_sent', {'id':message.id}) }}">
                <div class="form-group">
                    <input class="form-control" name="message[title]" value="{{ message.title }}">
                </div>
                <div class="form-group">
                                    <textarea class="form-control" rows="3" name="message[body]"
                                              placeholder="Content">{{ message.body }}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>

{% endblock %}


{% extends 'base.html.twig' %}

{% block body_id 'my_cars' %}

{% block main %}

    <div class="container">
        <div class="table-wrapper">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
            <h2>My Cars</h2>
            <p class="hint-text">View, edit or delete your cars.</p>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th></th>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>View</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                {% for car in cars %}
                    <tr>
                        <td><img class="img-fluid" src="{{ asset('uploads/cars/images/' ~ car.image ) }}" height="54" width="92"></td>
                        <td>{{ car.brand }}</td>
                        <td>{{ car.model }}</td>
                        <td><a class="btn btn-outline-info " href="{{ path('car_view', {'id': car.id}) }}">View
                                &raquo;</a></td>
                        <td><a class="btn btn-outline-success" href="{{ path('car_edit', {'id': car.id}) }}">Edit
                                &raquo;</a></td>
                        <td><a class="btn btn-outline-danger" href="{{ path('car_delete', {'id': car.id}) }}">Delete
                                &raquo;</a></td>
                    </tr>


                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}


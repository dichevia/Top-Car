{% extends 'base.html.twig' %}

{% block body_id 'login' %}
{% block main %}
    <div class="signup-form">
            <form name="authenticate"  action="{{ path('security_login') }}" method="post">
            <h2>Login</h2>
            <p class="hint-text">If you dont have an account - create one. It's free and only takes a minute.</p>

            <div class="form-group">
                <input type="email" class="form-control" name="_username" placeholder="Email" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="_password" placeholder="Password"
                       required="required">
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg btn-block">Login Now</button>
            </div>
        </form>
    </div>

{% endblock %}